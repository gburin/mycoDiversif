@article{omeara_2016,
title = {Non-equilibrium dynamics and floral trait interactions shape extant angiosperm diversity.},
author = {O'Meara, Brian C and Smith, Stacey D and Armbruster, W Scott and Harder, Lawrence D and Hardy, Christopher R and Hileman, Lena C and Hufford, Larry and Litt, Amy and Magallón, Susana and Smith, Stephen A and Stevens, Peter F and Fenster, Charles B and Diggle, Pamela K},
