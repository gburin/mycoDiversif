@article{snchezreyes_2017,
title = {Uncovering Higher-Taxon Diversification Dynamics from Clade Age and Species-Richness Data.},
author = {Sánchez-Reyes, Luna L and Morlon, Hélène and Magallón, Susana},
pages = {367-378},
url = {http://sysbio.oxfordjournals.org/lookup/doi/10.1093/sysbio/syw088},
year = {2017},
